<div class="grid_6">

	<h2>Edit Blog Post</h2>
	
	<form action="/admin/blog" method="POST">
		
		<input type="hidden" name="id" value="<%= @post.id %>" />
		
		<label for="post[title]">Title</label>
		<input type="text" name="post[title]" value="<%= @post.title %>">
		
		<label for="post[route]">Route</label>
		<input type="text" name="post[route]" value="<%= @post.route %>">
		
		<label for="post[body]">Body</label>
		<p>Images should be 600px wide</p>
		<p>Amazon is: http://runemadsen-2012.s3.amazonaws.com/blog/</p>
		<textarea name="post[body]" rows="8" cols="40"><%= @post.body %></textarea>
		
		<p><input type="submit" value="Save"></p>
	</form>

</div>
<div class="grid_6"></div>