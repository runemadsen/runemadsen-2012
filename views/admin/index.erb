<div class="grid_9" id="admin">

	<h2>New Blog Post</h2>
	
	<form action="/admin/blog" method="POST">
		
		<label for="post[title]">Title</label>
		<input type="text" name="post[title]">
		
		<label for="post[route]">Route</label>
		<input type="text" name="post[route]">
		
		<label for="post[body]">Body</label>
		<textarea name="post[body]" rows="8" cols="40"></textarea>
		
		<p><input type="submit" value="Save"></p>
	</form>

</div>
<div class="grid_3">

	<p>Images should be 600px wide</p>
