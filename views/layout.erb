<html>
<head>
	<title>Rune Madsen</title>
	<%= stylesheet_link_tag "reset", :media => :all %>
	<%= stylesheet_link_tag "runemadsen", :media => :all %>
	<%= javascript_include_tag "libraries" %>
	<%= javascript_include_tag "shared" %>
	<%= yield_content :head %>
	<script type="text/javascript">
	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-4524292-12']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();
	</script>
</head>
<body>
	<div id="container">

		<!-- Header -->
		<div class="grid_12" id="header">
			<a href="/" id="logo">Rune Madsen</a>
			<ul>
				<li<% if @active == :blog %> id="active"<% end %>><a href="/blog">Blog</a></li>
				<li<% if @active == :work %> id="active"<% end %>><a href="/work">Work</a></li>
				<li<% if @active == :code %> id="active"<% end %>><a href="https://github.com/runemadsen">Code</a></li>
				<li<% if @active == :itp %> id="active"<% end %>><a href="/printing-code-2012">ITP</a></li>
				<li<% if @active == :info %> id="active"<% end %>><a href="/info">Info</a></li>
				<li<% if @active == :mail %> id="active"<% end %>><a href="/mail">Mail</a></li>
			</ul>
			<div class="clear"></div>
		</div>
		<div class="clear"></div>
		<%= yield %>
	</div>
</body>
</html>